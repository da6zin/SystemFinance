<Window x:Class="SystemFinance.TransferirWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transferir" Height="220" Width="400">
    <Grid>
        <Label Content="Valor:" HorizontalAlignment="Left" Margin="39,59,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="Valor_TextBox" HorizontalAlignment="Left" Margin="164,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" FontSize="16" TextChanged="Valor_TextBox_TextChanged"/>
        <Button x:Name="Cancelar_Button" Content="Cancelar" Margin="0,144,267,0" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Right" Width="64" Click="Cancelar_Button_Click"/>
        <Button x:Name="Confirmar_Button" Content="Confirmar" Margin="257,144,0,0" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" Width="74" Click="Confirmar_Button_Click"/>
        <TextBox x:Name="Nome_TextBox" HorizontalAlignment="Left" Margin="164,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" FontSize="16" TextChanged="Nome_TextBox_TextChanged"/>
        <Label Content="Nome da Conta:" HorizontalAlignment="Left" Margin="39,90,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="16"/>
        <Label Content="Transferência:" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="16"/>

    </Grid>

</Window>
