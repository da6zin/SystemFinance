<Window x:Class="SystemFinance.TransferirWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transferir" Height="220" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Valor da transferência:" FontSize="16"/>
            <TextBox x:Name="txtValor" FontSize="16" Margin="0,10,0,0"/>
            <Button Content="Confirmar" FontSize="16" Margin="0,10,0,0" Click="Confirmar_Click"/>
        </StackPanel>
    </Grid>
</Window>
