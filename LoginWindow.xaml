<Window x:Class="SystemFinance.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemFinance"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Border Background="#002A8D" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="Olá, Fulano!" FontSize="26" FontWeight="Bold" Foreground="White"/>
                <Border Background="#E6E6E6" CornerRadius="10" Margin="0,20,0,0" Padding="10" Height="53">
                    <StackPanel IsEnabled="False">
                        
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Botões -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" >
            <Button Content="Sacar" Width="120" Height="50" Background="#002A8D" Foreground="White" FontSize="16" Margin="10" Click="Sacar_Click"/>
            <Button Content="Depositar" Width="120" Height="50" Background="#002A8D" Foreground="White" FontSize="16" Margin="10" Click="Depositar_Click"/>
            <Button Content="Transferir" Width="120" Height="50" Background="#002A8D" Foreground="White" FontSize="16" Margin="10" Click="Transferir_Click"/>
            <Button Content="Poupança" Width="120" Height="50" Background="#002A8D" Foreground="White" FontSize="16" Margin="10" Click="Poupanca_Click"/>
        </StackPanel>
        <Label x:Name="Rs_Saldo" Content="R$" HorizontalAlignment="Left" Margin="31,90,0,0" VerticalAlignment="Top" FontSize="18" Background="#FFD2D2D2"/>
        <Label x:Name="Valor_Saldo1" Content="0,00" HorizontalAlignment="Left" Margin="66,90,0,0" VerticalAlignment="Top" FontSize="18" Background="#FFD2D2D2"/>
    </Grid>
</Window>
